# Worker Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================

# Environment mode: development | staging | production
ENVIRONMENT=development

# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# LLM Settings
# =============================================================================

# LLM provider: gemini | ollama | mock
LLM_PROVIDER=gemini

# Model name (provider-specific)
#   Gemini:  gemini-2.0-flash, gemini-2.0-flash-lite
#   Ollama:  llama3.2, mistral, qwen2.5
LLM_MODEL=gemini-2.0-flash-lite

# Max output tokens per LLM response
LLM_MAX_OUTPUT_TOKENS=1024

# =============================================================================
# Google Gemini Settings (required when LLM_PROVIDER=gemini)
# =============================================================================

# Google AI Studio API key
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# =============================================================================
# Ollama Settings (used when LLM_PROVIDER=ollama)
# =============================================================================

# Ollama server URL (default: http://localhost:11434)
# Install Ollama: https://ollama.com
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# HTTP Client Settings
# =============================================================================

# Timeout for callback requests in seconds
CALLBACK_TIMEOUT=30

# =============================================================================
# Qdrant Vector Database
# =============================================================================

# Qdrant REST API URL
QDRANT_URL=http://localhost:6333

# Qdrant collection name for document chunks
QDRANT_COLLECTION=documents

# =============================================================================
# Embedding Settings
# =============================================================================

# Google embedding model for RAG
EMBEDDING_MODEL=text-embedding-004
