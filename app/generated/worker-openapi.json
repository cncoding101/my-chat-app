{
  "openapi": "3.1.0",
  "info": {
    "title": "Chat App Worker",
    "version": "0.1.0"
  },
  "paths": {
    "/chat/trigger": {
      "post": {
        "tags": [
          "chat"
        ],
        "summary": "Trigger Chat",
        "description": "Endpoint for the App to trigger a new LLM task.",
        "operationId": "trigger_chat_chat_trigger_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatTriggerRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/chat/callback-schema-discovery": {
      "post": {
        "tags": [
          "chat",
          "_schema"
        ],
        "summary": "Callback Schema Discovery",
        "description": "Endpoint used ONLY for generating the callback payload type in the frontend SDK.",
        "operationId": "callback_schema_discovery_chat_callback_schema_discovery_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatCallbackPayload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Read Root",
        "operationId": "read_root__get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatCallbackPayload": {
        "properties": {
          "chat_id": {
            "type": "string",
            "title": "Chat Id"
          },
          "response": {
            "type": "string",
            "title": "Response"
          },
          "status": {
            "type": "string",
            "title": "Status",
            "default": "completed"
          },
          "error": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error"
          }
        },
        "type": "object",
        "required": [
          "chat_id",
          "response"
        ],
        "title": "ChatCallbackPayload",
        "description": "Payload sent from Worker back to App when task is complete."
      },
      "ChatTriggerRequest": {
        "properties": {
          "chat_id": {
            "type": "string",
            "title": "Chat Id"
          },
          "message": {
            "type": "string",
            "title": "Message"
          },
          "callback_url": {
            "type": "string",
            "maxLength": 2083,
            "minLength": 1,
            "format": "uri",
            "title": "Callback Url"
          },
          "metadata": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "title": "Metadata"
          }
        },
        "type": "object",
        "required": [
          "chat_id",
          "message",
          "callback_url"
        ],
        "title": "ChatTriggerRequest",
        "description": "Payload sent from App to Worker to trigger an LLM task."
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}